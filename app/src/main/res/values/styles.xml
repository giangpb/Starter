<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_logo</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

<!--        <item name="android:windowNoTitle">true</item>-->
<!--        <item name="android:windowActionBar">true</item>-->
<!--        <item name="android:windowFullscreen">true</item>-->
<!--        <item name="android:windowContentOverlay">@null</item>-->
    </style>

<!--    Custom TextView-->
    <style name="text_bottomSheet_normal" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/font_intel_bold</item>
        <item name="android:textColor">@color/greyDark200</item>
    </style>

    <style name="text_small" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/font_intel</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_large" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/font_intel_bold</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_normal" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/font_intel</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_normal.bold" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/font_intel_bold</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_normal.bold_num" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/font_intel_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="text_normal.item" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/font_intel</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>


    <style name="text_large.completed" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/font_intel_bold</item>
        <item name="android:textSize">@dimen/font_large_completed</item>
        <item name="android:textColor">@color/black</item>
    </style>

<!--    Edit Text-->
    <style name="et_normal" parent="Widget.AppCompat.EditText">
        <item name="fontFamily">@font/font_intel</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/bg_spinner</item>
    </style>

<!--    Button Dialog-->

    <style name="btn_dialog" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:letterSpacing">0</item>
        <item name="strokeColor">@color/white</item>
    </style>

    <style name="btn_list" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:letterSpacing">0</item>
        <item name="strokeColor">@color/white</item>
        <item name="cornerRadius">@dimen/reset</item>
    </style>

    <style name="et_unit" parent="Widget.AppCompat.EditText">
        <item name="fontFamily">@font/font_intel</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="text_count_item" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/font_intel</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

<!--     Button Order-->
    <style name="btn_order" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/reset</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:paddingTop">@dimen/margin_stt3</item>
        <item name="android:paddingBottom">@dimen/margin_stt3</item>
        <item name="android:insetBottom">@dimen/reset</item>
        <item name="android:insetTop">@dimen/reset</item>
    </style>

<!--    custom btn textView-->
    <style name="btn_textView" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/button_dialog_textview_selected</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">@dimen/margin_normal</item>
    </style>

    <style name="btn_textView_recommend" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/bg_selected_recommend</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_large.bottomSheet" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/font_intel_bold</item>
        <item name="android:textSize">@dimen/font_normal_bottomSheet</item>
        <item name="android:textColor">@color/black</item>
    </style>

<!--    Round button-->
    <style name="ShapeAppearanceOverlay.MyApp.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

<!--    Text bridge small-->
    <style name="text_bridge_small" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/font_intel</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="login_input" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_margin">@dimen/margin_normal</item>
    </style>

<!--     toggle button-->
    <style name="card_toggle_btn" parent="Widget.MaterialComponents.CardView">
        <item name="strokeColor">@color/grey_separate</item>
        <item name="cardElevation">@dimen/reset</item>
        <item name="strokeWidth">@dimen/divider_size_small</item>
    </style>

<!--    Toast-->

    <style name="mytoast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/white</item>
        <item name="stFont">@font/font_intel</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@color/green</item>
        <item name="stSolidBackground">true</item>
<!--        <item name="stStrokeWidth">3dp</item>-->
<!--        <item name="stStrokeColor">#fff</item>-->
<!--        <item name="stIconStart">@drawable/ic</item>-->
<!--        <item name="stIconEnd">@drawable/ic</item>-->
        <item name="stLength">LONG</item> LONG or SHORT
        <item name="stGravity">top</item> top or center
        <item name="stRadius">2dp</item>
    </style>

    <style name="vnd_money" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="vnd_money.large" parent="vnd_money">
        <item name="android:textSize">@dimen/font_vnd</item>
    </style>

    <style name="key_colect_money" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/custom_btn_keyboard_money_selected</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_margin">@dimen/divider_size_small</item>
    </style>


</resources>