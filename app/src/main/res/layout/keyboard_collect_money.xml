<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_separate"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="1"
            style="@style/key_colect_money"
            android:layout_height="@dimen/toolbar_height_size"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="2"
            style="@style/key_colect_money"
            android:layout_height="@dimen/toolbar_height_size"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="3"
            style="@style/key_colect_money"
            android:layout_height="@dimen/toolbar_height_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="4"
            style="@style/key_colect_money"
            android:layout_height="@dimen/toolbar_height_size"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="5"
            style="@style/key_colect_money"
            android:layout_height="@dimen/toolbar_height_size"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="6"
            style="@style/key_colect_money"
            android:layout_height="@dimen/toolbar_height_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="7"
            style="@style/key_colect_money"
            android:layout_height="@dimen/toolbar_height_size"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="8"
            style="@style/key_colect_money"
            android:layout_height="@dimen/toolbar_height_size"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="9"
            style="@style/key_colect_money"
            android:layout_height="@dimen/toolbar_height_size"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="0dp"
            android:layout_margin="@dimen/divider_size_small"
            android:layout_weight="1"
            android:src="@drawable/ic_back_keyboard"
            android:padding="@dimen/margin_normal"
            android:background="@drawable/custom_btn_keyboard_money_selected"
            android:layout_height="@dimen/toolbar_height_size"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="0"
            style="@style/key_colect_money"
            android:layout_height="@dimen/toolbar_height_size"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Xong"
            style="@style/key_colect_money"
            android:layout_height="@dimen/toolbar_height_size"/>
    </LinearLayout>
</LinearLayout>