<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:clickable="true"
    android:background="?android:selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize">

    <ImageView
        android:id="@+id/ivDtag"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_drag"
        android:layout_marginLeft="@dimen/font_normal"
        android:layout_height="wrap_content"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabImageCate"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:src="@drawable/ic_tra_sua"
        android:elevation="@dimen/reset"
        app:fabSize="mini"
        android:layout_toRightOf="@id/ivDtag"
        app:backgroundTint="@color/purple_500"
        android:backgroundTint="@color/purple_500"
        app:tint = "@color/white"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvCategoryName"
        android:layout_width="wrap_content"
        android:text="@string/text_item_category"
        android:layout_toRightOf="@id/fabImageCate"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_normal"
        style="@style/text_normal"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/ivDelete"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_delete_red"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_width="28dp"
        android:src="@drawable/ic_blue_pen_edit"
        android:layout_toLeftOf="@id/ivDelete"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_height="28dp"/>
    <View
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/dividerVertical"
        android:layout_height="@dimen/divider_size_small">
    </View>
</RelativeLayout>