<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg_dialog_show_something"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/margin_normal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height_size"
        android:background="@color/purple_500">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_normal"
            android:text="@string/txt_input_price_item"
            android:textColor="@color/white"
            android:textSize="@dimen/font_large" />

        <ImageView
            android:id="@+id/ivCloseDialog"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="6dp"
            android:clickable="true"
            android:background="?selectableItemBackgroundBorderless"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_normal"
            android:src="@drawable/ic_close_20_white" />
    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/margin_normal"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="36dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/btn_textView_recommend"
            android:layout_width="0dp"
            android:layout_height="@dimen/text_view_button"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_weight="1"
            android:text="C" />

        <TextView
            style="@style/btn_textView_recommend"
            android:layout_width="0dp"
            android:layout_height="@dimen/text_view_button"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_weight="1"
            android:text="Giảm" />

        <TextView
            style="@style/btn_textView_recommend"
            android:layout_width="0dp"
            android:layout_height="@dimen/text_view_button"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_weight="1"
            android:text="Tăng" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="@dimen/text_view_button"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_weight="1"
            android:background="@drawable/bg_selected_recommend"
            android:clickable="true"
            android:src="@drawable/ic_back_keyboard" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_normal"
        android:orientation="horizontal">

        <TextView
            style="@style/btn_textView_recommend"
            android:layout_width="0dp"
            android:layout_height="@dimen/text_view_button"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_weight="1"
            android:text="7" />

        <TextView
            style="@style/btn_textView_recommend"
            android:layout_width="0dp"
            android:layout_height="@dimen/text_view_button"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_weight="1"
            android:text="8" />

        <TextView
            style="@style/btn_textView_recommend"
            android:layout_width="0dp"
            android:layout_height="@dimen/text_view_button"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_weight="1"
            android:text="9" />

        <TextView
            style="@style/btn_textView_recommend"
            android:layout_width="0dp"
            android:layout_height="@dimen/text_view_button"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_weight="1"
            android:text="-" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_normal"
        android:orientation="horizontal">

        <TextView
            style="@style/btn_textView_recommend"
            android:layout_width="0dp"
            android:layout_height="@dimen/text_view_button"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_weight="1"
            android:text="4" />

        <TextView
            style="@style/btn_textView_recommend"
            android:layout_width="0dp"
            android:layout_height="@dimen/text_view_button"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_weight="1"
            android:text="5" />

        <TextView
            style="@style/btn_textView_recommend"
            android:layout_width="0dp"
            android:layout_height="@dimen/text_view_button"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_weight="1"
            android:text="6" />

        <TextView
            style="@style/btn_textView_recommend"
            android:layout_width="0dp"
            android:layout_height="@dimen/text_view_button"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_weight="1"
            android:text="+" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_normal"
        android:orientation="horizontal">

        <TextView
            style="@style/btn_textView_recommend"
            android:layout_width="0dp"
            android:layout_height="@dimen/text_view_button"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_weight="1"
            android:text="1" />

        <TextView
            style="@style/btn_textView_recommend"
            android:layout_width="0dp"
            android:layout_height="@dimen/text_view_button"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_weight="1"
            android:text="2" />

        <TextView
            style="@style/btn_textView_recommend"
            android:layout_width="0dp"
            android:layout_height="@dimen/text_view_button"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_weight="1"
            android:text="3" />

        <TextView
            style="@style/btn_textView_recommend"
            android:layout_width="0dp"
            android:layout_height="@dimen/text_view_button"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_weight="1"
            android:text="±" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_normal"
        android:orientation="horizontal">

        <TextView
            style="@style/btn_textView_recommend"
            android:layout_width="0dp"
            android:layout_height="@dimen/text_view_button"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_weight="1"
            android:text="0" />

        <TextView
            style="@style/btn_textView_recommend"
            android:layout_width="0dp"
            android:layout_height="@dimen/text_view_button"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_weight="1"
            android:text="000" />

        <TextView
            style="@style/btn_textView_recommend"
            android:layout_width="0dp"
            android:background="#F2F4F2"
            android:layout_height="@dimen/text_view_button"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_weight="1" />

        <TextView
            style="@style/btn_textView_recommend"
            android:layout_width="0dp"
            android:layout_height="@dimen/text_view_button"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@color/purple_500"
            android:text="XONG" />

    </LinearLayout>
</LinearLayout>