<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/bottom_sheet_layout"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/toolbar_height_size"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    android:paddingBottom="@dimen/toolbar_height_size"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"

    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/llViewTop"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize">

        <TextView
            android:layout_width="wrap_content"
            android:text="Order"
            android:layout_alignParentStart="true"
            style="@style/text_large"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin_normal"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/ivCloseBottomSheet"
            android:layout_width="@dimen/size_ic_default"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:background="?android:selectableItemBackgroundBorderless"
            android:layout_margin="@dimen/margin_normal"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_delete_red"
            android:layout_height="@dimen/size_ic_default"/>
        <View
            android:layout_alignParentBottom="true"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:background="?android:attr/dividerVertical"
            android:layout_height="@dimen/divider_size_small">
        </View>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/llViewTop"
        android:layout_above="@id/llViewBottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:id="@+id/llViewBottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize">
        <View
            android:layout_alignParentTop="true"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:background="?android:attr/dividerVertical"
            android:layout_height="@dimen/divider_size_small">
        </View>

        <TextView
            android:layout_width="wrap_content"
            android:text="SL"
            android:layout_margin="@dimen/margin_normal"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="0"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/margin_normal"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>