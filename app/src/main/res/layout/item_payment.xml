<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rlItemPayment"
    android:clickable="true"
    android:background="?android:selectableItemBackground"
    android:layout_height="@dimen/btn_setup_menu_size_height"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/tvPaymentNo"
        android:layout_width="wrap_content"
        android:text="@string/text_payment_no"
        style="@style/text_normal"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvPaymentAmount"
        android:layout_width="wrap_content"
        android:text="@string/text_con_phai_thu_tien"
        style="@style/text_normal"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/ivArrowRight"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/ivArrowRight"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_right"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"/>
    <View
        android:layout_alignParentBottom="true"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="?android:attr/dividerVertical"
        android:layout_height="@dimen/divider_size_small">
    </View>
</RelativeLayout>